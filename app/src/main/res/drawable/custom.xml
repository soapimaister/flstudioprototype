<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties progress like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#006CD1C8"
                android:centerColor="#00D8A5DF"
                android:centerY="1.0"
                android:endColor="#00A5E685"
                android:angle="270" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient

                    android:startColor="#f91104"
                    android:centerColor="#FFEB3B"

                    android:centerY="1.0"

                    android:endColor="#77FD02"


                    android:angle="180"/>


            </shape>

        </clip>

    </item>


</layer-list>